{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Ironic deployment config schema",
  "type": "object",
  "required": [
    "partitions",
    "images"
  ],
  "properties": {
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "image_name": {
            "type": "string"
          },
          "image_uuid": {
            "type": "string"
          },
          "image_pull_url": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "boot": {
            "oneOf": [
              {
                "type": "boolean"
              },
              {
                "type": "integer"
              }
            ]
          }
        }
      }
    },
    "image_deploy_flags": {
      "type": "object"
    },
    "partitions_policy": {
      "enum": [
        "verify",
        "clean",
        "nailgun_legacy"
      ]
    },
    "partitions": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "type": "object",
            "required": [
              "type",
              "id",
              "size",
              "volumes"
            ],
            "properties": {
              "type": {"enum": ["disk"]},
              "id": {
                "type": "object",
                "required": [
                  "type",
                  "value"
                ],
                "properties": {
                  "type": {
                    "enum": [
                      "scsi",
                      "path",
                      "name"
                    ]
                  }
                }
              },
              "name": {
                "type": "string"
              },
              "size": {
                "type": "string"
              },
              "volumes": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "object",
                      "required": [
                        "type",
                        "size",
                        "vg"
                      ],
                      "properties": {
                        "type": {"enum": ["pv"]},
                        "vg": {
                          "type": "string"
                        },
                        "keep_data": {
                          "type": "boolean"
                        },
                        "lvm_meta_size": {
                          "type": "string"
                        },
                        "size": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": [
                        "type",
                        "size",
                        "mount"
                      ],
                      "properties": {
                        "type": {
                          "enum": [
                            "raid",
                            "partition"
                          ]
                        },
                        "mount": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "size": {
                          "type": "string"
                        },
                        "keep_data": {
                          "type": "boolean"
                        },
                        "file_system": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": [
                        "type",
                        "size"
                      ],
                      "properties": {
                        "type": {"enum": ["boot"]},
                        "size": {
                          "type": "string"
                        },
                        "keep_data": {
                          "type": "boolean"
                        }
                      }
                    },
                    {
                      "required": [
                        "type",
                        "size"
                      ],
                      "type": "object",
                      "properties": {
                        "type": {
                          "enum": [
                            "lvm_meta_pool"
                          ]
                        },
                        "size": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          {
            "required": [
              "type",
              "id",
              "volumes"
            ],
            "type": "object",
            "properties": {
              "type": {"enum": ["vg"]},
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "min_size": {
                "type": "integer"
              },
              "_allocate_size": {
                "type": "string"
              },
              "keep_data": {
                "type": "boolean"
              },
              "volumes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "type",
                    "size",
                    "name"
                  ],
                  "properties": {
                    "type": {"enum": ["lv"]},
                    "mount": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "size": {
                      "type": "string"
                    },
                    "keep_data": {
                      "type": "boolean"
                    },
                    "file_system": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ]
      }
    },
    "deploy_data": {
      "type": "object",
      "properties": {
        "kernel_params": {
          "type": "string"
        }
      }
    }
  }
}
